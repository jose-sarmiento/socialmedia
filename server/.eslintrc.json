{
	"env": {
		"browser": true,
		"commonjs": true,
		"es2021": true
	},
	"extends": ["airbnb-base", "prettier"],
	"parserOptions": {
		"ecmaVersion": "latest"
	},
	"plugins": ["prettier"],
	"rules": {
		"no-underscore-dangle": [2, { "allow": ["_id"] }],
		"no-console": "off",
		"import/no-extraneous-dependencies": [
			"error",
			{
				"devDependencies": true,
				"optionalDependencies": false,
				"peerDependencies": false
			}
		]
	}
}
